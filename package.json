{
  "name": "extension",
  "version": "1.0.0",
  "author": "gaoxiao6331",
  "license": "GPL3",
  "sideEffects": false,
  "scripts": {
    "dev": "cross-env NODE_ENV=development rspack build --watch",
    "build": "rm -rf build && rspack build",
    "dev:rollup": "cross-env NODE_ENV=development rollup -wc",
    "dev:gecko": "cross-env NODE_ENV=development PLATFORM=gecko rspack build --watch",
    "build:gecko": "rm -rf build-gecko && cross-env PLATFORM=gecko rspack build",
    "lint:ts": "../../node_modules/typescript/bin/tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gaoxiao6331/browser-extension-template"
  },
  "dependencies": {
    "@arco-design/web-react": "2.50.0",
    "laser-utils": "0.0.2-alpha.10",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "5.0.0",
    "@rollup/plugin-html": "1.0.2",
    "@rspack/cli": "0.2.5",
    "@rspack/plugin-html": "0.2.5",
    "@types/chrome": "0.0.241",
    "@types/node": "^20.14.9",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "less": "3.0.0",
    "less-loader": "6.0.0",
    "ts-node": "10.9.1",
    "cross-env": "7.0.3",
    "esbuild": "0.15.10",
    "eslint": "7.32.0",
    "postcss": "8.3.11",
    "prettier": "2.3.2",
    "rollup": "2.56.3",
    "rollup-plugin-esbuild": "4.10.1",
    "rollup-plugin-postcss": "4.0.1",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-userscript-metablock": "0.3.1",
    "tslib": "2.6.2",
    "typescript": "4.6.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{css,scss,less}": [
      "stylelint --fix"
    ]
  }
}
